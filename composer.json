{
    "name": "bright-components/services",
    "description": "Service Implementation for Laravel Projects",
    "version": "1.0.0-beta.1.2",
    "keywords": [
        "bright-components",
        "servicehandler"
    ],
    "homepage": "https://github.com/bright-components/services",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@phpstage.com",
            "homepage": "https://codestage.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "laravel/framework": "5.7.*",
        "bright-components/common": "1.0.*@dev"
    },
    "require-dev": {
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "^7.0",
        "orchestra/testbench": "~3.7"
    },
    "autoload": {
        "psr-4": {
            "BrightComponents\\Services\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightComponents\\Services\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightComponents\\Services\\ServicesServiceProvider"
            ]
        }
    }
}
