{
    "name": "bright-components/servicehandler",
    "description": "Service Definition/Handler Implementation for Laravel Projects",
    "version": "0.6.3",
    "keywords": [
        "bright-components",
        "servicehandler"
    ],
    "homepage": "https://github.com/bright-components/servicehandler",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@phpstage.com",
            "homepage": "https://codestage.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/config": "5.6.*",
        "illuminate/console": "5.6.*",
        "illuminate/support": "5.6.*",
        "illuminate/contracts": "5.6.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BrightComponents\\Service\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightComponents\\Service\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightComponents\\Service\\ServiceHandlerServiceProvider"
            ]
        }
    }
}
